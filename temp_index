        projectCards.forEach(card => {
            card.addEventListener('click', () => {
                const projectId = card.dataset.projectId;
                const project = projectsData[projectId];

                if (project) {
                    document.getElementById('modalTitle').textContent = project.title;
                    document.getElementById('modalDescription').textContent = project.description;
                    document.getElementById('modalTech').textContent = project.technologies;
                    document.getElementById('modalRole').textContent = project.role;
                    document.getElementById('modalAchievements').textContent = project.achievements;
                    document.getElementById('modalImage').src = project.image;
                    projectModal.style.display = 'flex'; // Show the modal
                }
            });
        });

        closeButton.addEventListener('click', () => {
            projectModal.style.display = 'none'; // Hide the modal
        });

        // Close modal when clicking outside of it
        window.addEventListener('click', (event) => {
            if (event.target == projectModal) {
                projectModal.style.display = 'none';
            }
        });

        // Basic Contact Form Submission (no backend)
        const contactForm = document.getElementById('contactForm');
        const formMessage = document.getElementById('formMessage');

        contactForm.addEventListener('submit', function(e) {
            e.preventDefault(); // Prevent actual form submission

            // Simulate form submission success
            formMessage.textContent = 'Thank you for your message! I will get back to you soon.';
            formMessage.classList.remove('text-red-500');
            formMessage.classList.add('text-green-500');
            contactForm.reset(); // Clear the form

            // You would typically send this data to a backend server here
            // Example: fetch('/api/contact', { method: 'POST', body: new FormData(this) })
            // .then(response => response.json())
            // .then(data => console.log(data))
            // .catch(error => console.error('Error:', error));
        });
    </script>
</body>
</html>
